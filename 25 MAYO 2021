print("Si desea realizar una suma, ingrese 1")
print("Si desea realizar una resta, ingrese 2")
print("Si desea realizar una multiplicación, ingrese 3")
print("Si desea realizar una división, ingrese 4")

opcion = int(input(" "))
num1 = int(input("Ingrese el primer número a operar "))
num2 = int(input("Ingrese el segundo número a operar "))

if opcion==1:
  suma = num1+num2
  print("La suma de los números ingresados es:",suma)

elif opcion==2:
  resta = num1-num2
  print("La resta de los números ingresados es:",resta)
elif opcion==3:
  multiplicacion = num1*num2
  print("La multiplicación de los número ingresados es:",multiplicacion)
elif opcion==4:
  division = num1//num2
  print("La división de los números ingresados es:",division)
else:
  print("El número ingresado no pertenece")
